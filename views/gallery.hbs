            </div>

            <div class="nav__toggle" id="toggle">
                <i class='bx bx-menu'></i>
            </div>

        </div>

</header>


<section >

<div class="video">
        <div class="section__title">
            <h1>OUR WORKS</h1>
        </div>
    <div class="vservice">

        <div class="vs">
            <video src="/assests/services/v1.mp4" 
            type="video/mp4"  muted  loop class="clip" >
            </video>
        </div>

        <div class="vs">
            <video src="/assests/services/v3.mp4" 
            type="video/mp4"  muted  loop  class="clip">
            </video>
        </div>

        <div class="vs">
            <video src="/assests/services/v2.mp4"
            type="video/mp4"  muted  loop class="clip" >
            </video>
        </div>

        <div class="vs">
            <video src="/assests/services/v4.mp4"
            type="video/mp4"  muted  loop  class="clip">
            </video>
        </div>
            
        </div>
</div>

</section>

</body>


<script>
    

    // Listening to the video element
    const clip = document.querySelectorAll(".clip")
    for(let i=0;i<clip.length;i++){
    /* Adding the event listeners on the video to play/pause the video. */
    clip[i].addEventListener("mouseenter", ()=> {
      clip[i].play();
    })

    /* Applying the mouse out event to pause the video */
    clip[i].addEventListener("mouseout", ()=> {
     clip[i].pause();
    })
    }

</script>

